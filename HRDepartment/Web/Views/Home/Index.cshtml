@using Web.Models
@model IEnumerable<FullEmployeeViewModel>
@{
    ViewBag.Title = "Home Page";
}

<table class="table">
    <tr>
        <th>
            <h2>Our employees</h2>
        </th>
        <th>
            <br />
            <div align="right">
                @Html.ActionLink("View employees sorted by name", "GetAllEmployeesSortedByName", "Home")
            </div>

            <div align="right">
                @Html.ActionLink("View employees sorted by surname", "GetAllEmployeesSortedBySurname", "Home")
            </div>
        </th>
    </tr>
</table>

    <table class="table">
        <tr>
            <th>
                N
            </th>
            <th>
                Name
            </th>
            <th>
                Surname
            </th>
            <th>
                Experience (years)
            </th>
            <th>
                Payment Number
            </th>
            <th>
                Department
            </th>
            <th>
                Position
            </th>
            <th>
                Projects
            </th>
        </tr>


        @foreach (FullEmployeeViewModel item in Model)
        {
            <tr>
                <td>
                    @item.EmployeeId
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Surname
                </td>
                <td>
                    @item.Experience
                </td>
                <td>
                    @item.PaymentNum
                </td>
                <td>
                    @item.DepartmentName
                </td>
                <td>
                    @item.Position
                </td>
                <td>
                    @Html.ActionLink("View projects", "EmployeesProjects", new { id = item.EmployeeId })
                </td>
            </tr>
        }

    </table>

    <div>
        @Html.ActionLink("Update employee", "UpdateEmployee", "Home")
    </div>

    <div>
        @Html.ActionLink("Add new employee", "AddEmployee", "Home")
    </div>

    <div>
        @Html.ActionLink("Delete employee", "DeleteEmployee", "Home")
    </div>

